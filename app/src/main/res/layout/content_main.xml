<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main" tools:context=".MainActivity">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/userProfileButton"
        android:src="@drawable/user"
        android:background="@android:color/transparent"
        android:layout_marginTop="137dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/settingsButton"
        android:layout_toStartOf="@+id/settingsButton" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/calorieCounterButton"
        android:src="@drawable/calories"
        android:background="@android:color/transparent"
        android:layout_alignTop="@+id/userProfileButton"
        android:layout_alignLeft="@+id/tipsButton"
        android:layout_alignStart="@+id/tipsButton" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bmiButton"
        android:src="@drawable/bmi"
        android:background="@android:color/transparent"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/userProfileButton"
        android:layout_alignStart="@+id/userProfileButton"
        android:layout_marginTop="40dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tipsButton"
        android:src="@drawable/tips"
        android:background="@android:color/transparent"
        android:layout_alignTop="@+id/bmiButton"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="BMI"
        android:id="@+id/textView3"
        android:textColor="#ffffff"
        android:gravity="center"
        android:layout_below="@+id/bmiButton"
        android:layout_alignRight="@+id/userProfileButton"
        android:layout_alignEnd="@+id/userProfileButton"
        android:layout_alignLeft="@+id/bmiButton"
        android:layout_alignStart="@+id/bmiButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Profile"
        android:id="@+id/textView"
        android:textColor="#ffffff"
        android:gravity="center"
        android:layout_below="@+id/userProfileButton"
        android:layout_toLeftOf="@+id/settingsButton"
        android:layout_alignLeft="@+id/userProfileButton"
        android:layout_alignStart="@+id/userProfileButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="  Calories"
        android:id="@+id/textView2"
        android:textColor="#ffffff"
        android:gravity="center"
        android:layout_below="@+id/calorieCounterButton"
        android:layout_toRightOf="@+id/settingsButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Tips"
        android:id="@+id/textView4"
        android:textColor="#ffffff"
        android:gravity="center"
        android:layout_below="@+id/tipsButton"
        android:layout_alignLeft="@+id/tipsButton"
        android:layout_alignStart="@+id/tipsButton"
        android:layout_alignRight="@+id/tipsButton"
        android:layout_alignEnd="@+id/tipsButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:id="@+id/settingsButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Daily Summary"
        android:id="@+id/summaryButton"
        android:layout_above="@+id/settingsButton"
        android:layout_centerHorizontal="true"
        android:onClick="clickSummary" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:src="@drawable/fitkitlogo"
        android:layout_above="@+id/calorieCounterButton" />

</RelativeLayout>
